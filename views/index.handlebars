<div id='main'>
  <h1>Burgers!</h1>

  <div id='add'>
    <h2>Add a Burger to Eat!</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
        <button type="submit">Add Burger</button>
      </div>
    </form>
  </div>

  <div id='eat'>
    <h2>I'm Starving!</h2>
    <h2>I'm Gonna Eat These Burgers!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  
  <div id='ate'>
    <h2>I'm Stuffed.</h2>
    <h2>I Ate All These Burgers!</h2>
    <h2>I'm a Pig.</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>